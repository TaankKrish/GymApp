<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Title -->
    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Hero Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/heroImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gym_home"
        android:background="@drawable/img_bg_home"
        android:clipToOutline="true"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/homeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" /><!-- Replace with your image -->

    <!-- Hero Text Overlay -->
    <TextView
        android:id="@+id/heroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ignite Your Fitness Journey"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/heroImage"
        app:layout_constraintStart_toStartOf="@id/heroImage"
        android:layout_margin="16dp"/>

    <!-- Welcome Title -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Train Hard Fitness"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/heroImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Welcome Description -->
    <TextView
        android:id="@+id/welcomeDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome to Train Hard Fitness, where dedication meets results. Our state-of-the-art facility is designed to empower your fitness journey, offering diverse equipment, dynamic classes, and a supportive community. We believe in pushing boundaries and celebrating every milestone with you."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Expert Trainers Title -->
    <TextView
        android:id="@+id/trainersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meet Our Expert Trainers"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@id/welcomeDesc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Trainer Name -->
    <TextView
        android:id="@+id/trainerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sarah J."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/trainersTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp"/>

    <!-- Trainer Bio -->
    <TextView
        android:id="@+id/trainerBio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="**Certified Strength &amp; Conditioning Specialist** Sarah is passionate about empowering clients to achieve their peak performance. With over 10 years of experience, she specializes in functional training and personalized programs that build strength, endurance, and confidence."
        android:textSize="13sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/trainerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Bottom Navigation -->

</androidx.constraintlayout.widget.ConstraintLayout>
