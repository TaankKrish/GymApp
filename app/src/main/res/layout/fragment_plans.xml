<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/titleMembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membership Plans"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/membershipCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/titleMembership"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Plan Title -->
            <TextView
                android:id="@+id/planTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Thrive"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Price -->
            <TextView
                android:id="@+id/planPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$49.99"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                app:layout_constraintTop_toBottomOf="@id/planTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- per month -->
            <TextView
                android:id="@+id/perMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="per month"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintStart_toEndOf="@id/planPrice"
                app:layout_constraintBottom_toBottomOf="@id/planPrice"
                android:layout_marginStart="8dp"/>

            <!-- Feature 1 -->
            <TextView
                android:id="@+id/feature1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ Full Gym Access"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/planPrice"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Feature 2 -->
            <TextView
                android:id="@+id/feature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ Group Classes"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/feature1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Feature 3 -->
            <TextView
                android:id="@+id/feature3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ Nutritional Guide"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/feature2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Subscribe Button -->
            <Button
                android:id="@+id/subscribeBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Subscribe"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/green"
                app:cornerRadius="30dp"
                app:layout_constraintTop_toBottomOf="@id/feature3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
