<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <TextView
        android:id="@+id/tvGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:textSize="18sp"
        android:textColor="#222"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Weightlifting Zone Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWeightlifting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGallery"
        app:layout_constraintEnd_toStartOf="@id/cardCardio"
        app:layout_constraintWidth_percent="0.46"
        app:layout_constraintDimensionRatio="1.2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/weightlifting"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weightlifting zone"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom"
                android:padding="8dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Cardio Zone Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCardio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@id/cardWeightlifting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGallery"
        app:layout_constraintWidth_percent="0.46"
        app:layout_constraintDimensionRatio="1.2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cardio"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardio zone"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom"
                android:padding="8dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Yoga Zone Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardYoga"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardWeightlifting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardPosing"
        app:layout_constraintWidth_percent="0.46"
        app:layout_constraintDimensionRatio="1.2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/yoga"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yoga zone"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom"
                android:padding="8dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Posing Room Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPosing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardCardio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardYoga"
        app:layout_constraintWidth_percent="0.46"
        app:layout_constraintDimensionRatio="1.2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/posing_room"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posing Room"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom"
                android:padding="8dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
